= link_to toggle_event_saves_path(event, from: 'single'), class: "btn btn-default event-#{event.id}-save #{(try(:current_user).saved_events.include? event) ? 'btn-warning' : ''}", method: :post, remote: true do
  i.glyphicon> class="#{(try(:current_user).saved_events.include? event) ? 'glyphicon-star' : 'glyphicon-star-empty'}"
  - if try(:current_user).saved_events.include? event
    | Saved
  - else
    | Save