.popover

  h3.popover-title ng-bind='title' ng-show='title'
  .popover-content
  	.form-group
  	  input.form-control (
  	  	ng-autocomplete=""
  	  	ng-model="data.autocomplete"
  	  	options="{types: '(cities)'}"
  	  	details="data.locationDetails"
  	  	placeholder=(t 'sidebar.your_cities.placeholder')
  	  )

  	.list-group
  	  a.list-group-item (
  	  	ng-repeat='location in data.locations'
  	  	ng-click='removeLocation($index)'
  	  	ng-mouseover='location.hover=true'
  	  	ng-mouseout='location.hover=false'
  	  	ng-init='location.hover=false'
  	  	ng-class="{true: 'list-group-item-danger'}[location.hover]"
  	  	title='Click to remove this location'
  	  	data-toggle='tooltip'
  	  )

  	    | {{ location.city }}
  	    i.pull-right.fa.fa-times

  	.btn-group.btn-group-justified
  	  a.btn.btn-success.btn-sm ng-click="done(); $hide()"
        i.fa.fa-check>
        | Done